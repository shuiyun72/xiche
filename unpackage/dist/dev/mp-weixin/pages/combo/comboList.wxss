.buy_btn {
  background-color: #208EFF;
  text-align: center;
  color: #fff;
  padding: 26rpx 0;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 750rpx;
}
.combo_body {
  border-top: 1rpx solid #eee;
  padding: 26rpx;
}
.combo_body .p {
  margin-bottom: 26rpx;
  color: #888;
}
.combo_body .combo_title {
  font-weight: bold;
  padding: 26rpx 0 16rpx;
  color: #666;
  margin-bottom: 10rpx;
}
.combo_body .taocan_box {
  border: 4rpx solid #eee;
  border-radius: 16rpx;
  margin-bottom: 26rpx;
  padding: 0 50rpx;
}
.combo_body .taocan_box.active {
  border: 4rpx solid #81BFFF;
  background-color: #E0EFFF;
}
.combo_body .taocan_box .iconl {
  background-color: #208EFF;
  width: 120rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  border-radius: 0 0 12rpx 12rpx;
  padding: 4rpx 0;
}
.combo_body .taocan_box .info_s {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  font-weight: bold;
  font-size: 36rpx;
  margin: 16rpx 0;
}
.combo_body .taocan_box .info_s .t {
  color: #333;
}
.combo_body .taocan_box .info_s .money {
  color: #f00;
}
.combo_body .taocan_box .info_m {
