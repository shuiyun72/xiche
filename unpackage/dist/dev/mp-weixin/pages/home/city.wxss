  top: 160rpx;
  right: 0;
}
.side_sear .item {
  padding: 3px 6px;
  margin-bottom: 3px;
  font-size: 12px;
  text-align: center;
}
.city_search .city_title {
  font-size: 14px;
  color: #777;
  margin: 20rpx 30rpx;
  padding-top: 20rpx;
}
.city_search .city_title + .city_title {
  border-top: 1px solid #eee;
}
